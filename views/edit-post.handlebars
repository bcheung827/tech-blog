<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" id="post-id" value="{{post.id}}"/>
        <label for="post-title" class="form-label">Title</label>
        <input id="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label for="post-body" class="form-label">Content</label>
        <textarea id="post-body" class="form-input">{{post.content}}</textarea>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn" id="delete-post-btn">Delete Post</button>
    </form>
</div>

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>